    -
        var domains = [
            { title: '.ru', isActive: false},
            { title: '.com', isActive: false},
            { title: '.рф', isActive: false},
            { title: '.net', isActive: true},
            { title: '.su', isActive: false},
            { title: '.org', isActive: false},
            { title: '.ru', isActive: false},
            { title: '.tv', isActive: true},
            { title: '.pro', isActive: false},
            { title: '.info', isActive: false},
            { title: '.mobi', isActive: false},
            { title: '.name', isActive: false}
        ]
    +testDonain(domains)    

    -
        var advant = {
            title: 'Преимущества RuWeb',
            items: [
                {img: '/images/ad1.png', description: 'Техническая поддержка работает онлайн 24/7.'},
                {img: '/images/ad2.png', description: 'Дата-центр в России.'},
                {img: '/images/ad3.png', description: 'Защита веб-сайтов от DDOS-атак.'},
                {img: '/images/ad4.png', description: 'SSL-сертификаты (Let`s Encrypt, Comodo, Comodo, GeoTrust).'},
                {img: '/images/ad5.png', description: 'Лицензии на панели управления.'}
            ]
        }
    +advantages(advant)    

    -
        var sp = [
            {title: '1500 руб.', description: 'Бонус при продлении услуги хостинга на сумму более 1500 ₽'},
            {title: '6 месяцев', description: 'При продлении на срок от 6 месяцев — дополнительные скидки.'},
