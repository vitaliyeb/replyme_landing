div.main-preview
  display grid
  grid-template-columns 615px 360px
  justify-content space-between
  box-sizing border-box
  padding-top 60px
  padding-bottom 170px
  &__info
    margin-top 60px
    & h1
      color #201F43
      margin 0 0 32px 0
      font-family: 'Montserrat', sans-serif;
      font-weight 700
      font-size: 48px;
      line-height: 56px;
    & p
      font-size: 20px;
      margin 0 0 50px 0
      line-height: 24px;