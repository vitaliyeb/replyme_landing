div.main-preview
  display grid
  grid-template-columns clamp(300px, 40vw, 615px) clamp(300px, 25vw, 360px)
  justify-content space-between
  box-sizing border-box
  padding-top clamp(20px, 4vw, 60px)
  padding-bottom clamp(50px, 10vw, 170px)
  &__wrapper
    background-image url("./../../public/images/gecsagan.svg")
    background-repeat no-repeat
    background-position 120% center
  @media(max-width 650px)
    grid-template-columns 1fr
    gap 20px
  &__info
    margin-top clamp(20px, 4vw, 60px)
    & p
      font-size: clamp(14px, 1.4vw, 20px);
      margin clamp(15px, 2vw, 32px) 0 clamp(25px, 4vw, 50px) 0
      line-height: 24px;