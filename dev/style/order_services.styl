.order-services
  margin-bottom 109px
  display flex
  background-image url("./../../public/images/aboutMessages.svg")
  background-repeat no-repeat
  background-position right center
  &__wrapper
    overflow hidden
  &__content
    background: #F7FAFC;
    margin-right auto
    border-radius: 0 56px 56px 0;
    max-width 440px
    position: relative;
    padding 72px 112px
    &:after
      content ''
      display block
      left 0
      top 0
      background-color inherit
      position: absolute;
      width 50vw
      height 100%
      transform translateX(-100%)
  &__description
    font-size: 16px;
    line-height: 20px;
    color: #3D3C69;
    font-weight 400
    margin 25px 0 45px
  & form
    display grid
    gap 24px