@import "header.styl"
@import "main_preview.styl"
@import "reviews.styl"

body
  font-family: 'Roboto Mono', monospace;
  margin 0
  font-size 16px

.container
  max-width 1400px
  box-sizing border-box
  padding 0 5px
  width 100%
  margin 0 auto

.button
  &__secondary
    padding 24px 59px
    color #4DCCBD
    border: 2px solid #4DCCBD;
    box-sizing: border-box;
    font-weight 700
    background-color transparent
    border-radius: 32px;
    font-size 1rem
    cursor pointer
    margin 24px 0
  &__primary
    box-sizing border-box
    padding 24px 63px
    background: #4DCCBD;
    border none
    outline none
    color #fff
    font-size: 20px;
    line-height: 24px;
    border-radius: 40px