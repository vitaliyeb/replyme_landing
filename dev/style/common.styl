
body
  font-family: 'Roboto Mono', monospace;
  margin 0
  font-size 16px

.container
  max-width 1440px
  box-sizing border-box
  padding 0 5px
  width 100%
  margin 0 auto

.button
  &__secondary
    padding 24px 59px
    color #4DCCBD
    border: 2px solid #4DCCBD;
    box-sizing: border-box;
    font-weight 700
    background-color transparent
    border-radius: 32px;
    font-size 1rem
    cursor pointer
    margin 24px 0
  &__primary
    box-sizing border-box
    padding 24px 63px
    background: #4DCCBD;
    border none
    outline none
    color #fff
    cursor: pointer;
    font-size: 20px;
    line-height: 24px;
    border-radius: 40px

.heading
  font-family: 'Montserrat', sans-serif;
  color #201F43
  margin 0
  font-weight: 700;
  font-size: 48px;
  line-height: 56px;

.input
  border: 2px solid #3D3C69;
  box-sizing: border-box;
  border-radius: 8px;
  padding 24px 32px
  outline none
  color #201F43
  font-size: 20px;
  line-height: 24px;
  &::placeholder
    color: rgba(61, 60, 105, 0.5);