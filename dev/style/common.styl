html
  font-size clamp(13px, 2vw, 16px)

body
  font-family: 'Roboto Mono', monospace;
  margin 0

.container
  max-width 1440px
  box-sizing border-box
  padding 0 10px
  width 100%
  margin 0 auto
  &_secondary
    max-width 1110px
  &_minor
    max-width 1200px
    padding-left 10px

.button
  &__secondary
    padding clamp(7px, 2vw, 24px) clamp(15px, 3vw, 59px)
    color #4DCCBD
    white-space nowrap
    border: 2px solid #4DCCBD;
    box-sizing: border-box;
    font-weight 700
    background-color transparent
    border-radius: 32px;
    font-size 1rem
    cursor pointer
    margin 24px 0
  &__primary
    box-sizing border-box
    padding clamp(7px, 2vw, 24px) clamp(15px, 4vw, 63px)
    background: #4DCCBD;
    border none
    outline none
    font-family: 'Roboto Mono',monospace;
    color #fff
    cursor: pointer;
    font-size: 20px;
    line-height: 24px;
    border-radius: 40px

.heading
  font-family: 'Montserrat', sans-serif;
  color #201F43
  margin 0
  font-weight: 700;
  font-size: clamp(22px, 3vw, 48px)
  line-height: clamp(25px, 3vw, 56px)

.input
  border: 2px solid #3D3C69;
  box-sizing: border-box;
  border-radius: 8px;
  padding clamp(10px, 2vw, 24px) clamp(15px, 2vw, 32px)
  outline none
  color #201F43
  font-size: 1.3rem;
  line-height: 1.4rem;
  &::placeholder
    color: rgba(61, 60, 105, 0.5);