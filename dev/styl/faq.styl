.faq
    margin-bottom: clamp(20px, 4vw, 40px)
    &_items 
        background-color: #4A5375;
        color: #fff;
        font-size: clamp(13px, 2vw, 16px);
        font-weight: 500;    
    &__answer 
        display: none;
        background-color: #3B4360;
        padding: clamp(10px, 3vw, 18px) clamp(20px, 4vw, 35px) clamp(10px, 3vw, 18px);
    &__quest
        padding: clamp(10px, 3vw, 18px);
        padding-right: calc(clamp(10px, 3vw, 18px) + 20px);
    &__quest
    &__answer 
       box-sizing: border-box;
    &__item
        position relative
        &_active
            & ^[-2]__answer 
                display: block;
            & ^[-2]__icon 
                transform: rotate(90deg);     
    &__icon 
        position: absolute;
        width: 9px;
        height: 15px;
        top: clamp(10px, 3vw, 20px);
        transform: rotate(-90deg);
        background-image: url(/images/tai.png);
        right: 20px; 
    & h2 
        margin-top: clamp(20px, 5vw, 40px);
        margin-bottom: clamp(15px, 5vw, 25px);   




