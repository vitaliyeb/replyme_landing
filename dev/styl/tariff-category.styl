.tariffs
    margin-bottom: 35px
    &__card
        &-wrapper 
            width: 100%
            overflow-x: auto
    &__cards
        min-width: 1226px
        display: flex
        justify-content: space-between 
        &_category 
            & .button 
                margin-top: auto
                margin-left: 20px
            & .tariff-card 
                    display: flex
                    align-items: flex-start
                    flex-direction: column
                    height: 368px
                    padding-bottom: 28px
                    box-sizing: border-box
                    width: 232px
                    &__price 
                        margin-bottom: 22px;
            & .tariff-card__title
                margin-top: 21px
                font-family: Bebas Neue
                font-weight: bold


.tariff-card
    background-color: #3B4360;
    &__title 
        color: #fff
        font-weight: bold
        line-height: 1em
        margin-bottom: 20px
        font-size: 30px
        text-transform: uppercase
    &__info
        box-sizing: border-box
        padding: 0 20px
    &__price 
        font-size: 24px
        font-weight: bold
        color: #fff
        line-height: .9em     
    &__description
        font-size: 16px
        font-weight: 500
        color: #fff                    