
.advantages
    background-clip: content-box
    padding-bottom: 1px
    background-origin: content-box
    margin-bottom: clamp(30px, 7vw, 60px)
    padding-top: 1px
    margin-top: clamp(25px, 7vw, 40px)
    background-image: url('/images/advantagesbg.png')
    background-size: cover
    background-repeat: no-repeat
    &-wrapper 
        display: inline-block
        background-color: #3B4360
        width: 100%
    &__subheading
        color: #fff
        margin-bottom: 1em
        margin-top: 1.3em
    &__items 
        display: flex
        justify-content: space-around
        margin-bottom: 40px
        @media (max-width: 820px)
            flex-wrap: wrap
            justify-content: space-between
        @media (max-width: 520px)
            flex-direction: column    
    &__item 
        color: #fff
        width: 100%
        max-width: 190px
        font-size: clamp(13px, 1vw, 16px)
        font-weight: 500
        margin: 0 5px
        @media (max-width: 820px)
            max-width: 48%
            margin-bottom: 10px
            &:last-child
                margin-right: auto
        @media (max-width: 520px)
            max-width: 230px
            margin: 10px auto
        &-text 
            margin-top 10px